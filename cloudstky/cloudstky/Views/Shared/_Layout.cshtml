<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cloudstky</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/newstyle.css" rel="stylesheet" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

    

</head>


<body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="50">
    <header> 
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white fixed-top border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">cloudstky</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 gapcol">
                    </ul>

                    <ul class="nav navbar-nav navbar-right gapcol">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#home">หน้าแรก</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#about">เกี่ยวกับเรา</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#service">บริการ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#footer">ติดต่อเรา</a>
                        </li>
                        <li class="nav-item"> <button class="btn btn-outline-success" onclick="location.href='@Url.Action("Login", "Home")'" type="button">เข้าสู่ระบบ</button></li>
                        <li class="nav-item"> <button class="btn btn-outline-success" onclick="location.href='@Url.Action("Login", "Register")'" type="button">ลงทะเบียน</button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()

        </main>
    </div>

    <footer class="border-top footer text-muted" id="footer">


            <div class="container">

                &copy; 2022 - cloudstky - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


